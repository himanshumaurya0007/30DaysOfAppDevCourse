<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="18dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android App Development (Kotlin) Exam"
        android:textSize="31sp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="*Click on below Question TextView's to open the exam questions"
        android:textSize="14sp"
        android:layout_margin="18dp"/>

    <TextView
        android:id="@+id/tvQues1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/tvQues2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 2"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/tvQues3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 3"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/tvQues4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 4"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/tvQues5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 5"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/tvQues6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 6"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/tvQues7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 7"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_gravity="left"/>

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Exit"
        android:textSize="18sp"/>

</LinearLayout>